rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Briefs: public read of metadata only, paid content denied to client
    match /briefs/{briefId} {
      // Allow read of basic fields only
      allow read: if resource.data.keys().hasAny(['headline', 'freeHtml', 'publishDate', 'slug', 'status']);

      // Admin-only write access
      allow write: if request.auth != null &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users: admin-only access
    match /users/{userId} {
      allow read, write: if request.auth != null &&
                            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
